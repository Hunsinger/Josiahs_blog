<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
</head>

<% if @skip_container %>
    <body id="page-top" class="index" style="background-color: white;">
<% else %>
    <body id="page-top" class="index">
<% end %>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to root_path do %>
               	<span class="navbar-brand">My Blog</span>
            <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li class="page-scroll">
                    <%= link_to articles_path do %>
		               	Blog
		            <% end %>
                </li>
                <li class="page-scroll">
                    <%= link_to shifty_path do %>
		               Shifty
		            <% end %>
                </li>
                <li class="page-scroll">
                    <%= link_to about_path do %>
		               	About
		            <% end %>
                </li>
                <li class="page-scroll">
                    <% if user_signed_in? %>
                          <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                        <% else %>
                          <%= link_to "Sign in", new_user_session_path %>
                        <% end %>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
<div class="scroll-top page-scroll visible-xs visible-sm">
    <a class="btn btn-primary" href="#page-top">
        <i class="fa fa-chevron-up"></i>
    </a>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<% if @skip_container %>
    <%= yield %>
<% else %>
    <div class="container margin_container">
        <%= yield %>
    </div>
<% end %>

<!-- Footer -->
<footer class="text-center">
    <div class="footer-above">
        <div class="container">
            <div class="row">
                <div class="footer-col col-md-4">
                    <h3>Location</h3>
                    <p>The Web!<br>Duh!&nbsp;&nbsp; :P</p>
                </div>
                <div class="footer-col col-md-4">
                </div>
                <div class="footer-col col-md-4">
                    <h3>About this website</h3>
                    <p>This website is a free to use, open source project created by Hunsinger the Matist.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-below">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    Copyright &copy; Hunsinger the Matist 2015
                </div>
            </div>
        </div>
    </div>
</footer>

</body>
</html>